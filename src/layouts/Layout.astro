---
import '../styles/global.css';
import Header from '../components/jsx/Header';
import { string } from 'astro:schema';

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Discover the best solutions for your needs with Hagalink. We provide top-notch services to help you succeed." />
		<meta name="keywords" content="Hagalink, solutions, services, success, business, technology" />
		<meta name="author" content="Hagalink Team" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Discover the best solutions for your needs with Hagalink. We provide top-notch services to help you succeed." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://hagalink.netlify.app" />
		<meta property="og:image" content="https://hagalink.netlify.app/og-image.jpg" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="Discover the best solutions for your needs with Hagalink. We provide top-notch services to help you succeed." />
		<meta name="twitter:image" content="https://hagalink.netlify.app/twitter-image.jpg" />
	</head>
	<body class="h-full w-full overflow-x-hidden">
		<div class="relative h-full w-full bg-gray-800">
			<div class="absolute inset-0 bg-[linear-gradient(to_right,#6b6b6b3e_1px,transparent_1px),linear-gradient(to_bottom,#6b6b6b3e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>
			<Header />
			<slot />

		</div>
	</body>
</html>
